@model Final.Pages.Values.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].FirstName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Student[0].LastName)
            </th>

            @foreach (var itemt in Model.Theme)
            {
                <th>
                    @Html.DisplayFor(modelItem => itemt.Title)
                </th>
                <th></th>
            }          
        </tr>
    </thead>
    <tbody>
@foreach (var items in Model.Student) 
{
         <tr>                   
                        <td>
                            @Html.DisplayFor(modelItem => items.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => items.LastName)
                        </td>

                        @foreach (var itemt in Model.Theme)
                        {
                            
                            @foreach (var item in Model.Value)
                            {
                            if (item.ThemeId==itemt.ID && item.StudentId==items.ID)
                            {
                            <td>
                            @Html.DisplayFor(modelItem => item.Mark)
                            </td>   
                            <td>
                            <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                            @*<a asp-page="./Details" asp-route-id="@item.ID">Details</a> |*@
                            <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                            </td>
                            }
                            }
                        }
         </tr>
         
}
            </tbody>
</table>
